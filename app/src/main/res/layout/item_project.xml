<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center"
    app:cardCornerRadius="5dp"
    android:layout_width="match_parent"
    android:layout_margin="5dp"
    app:cardElevation="5dp"
    android:layout_height="wrap_content"
    >ConstraintLayout
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
   <TextView
      android:id="@+id/author_text"
      android:layout_gravity="center"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="author"
      android:layout_marginTop="10dp"
      android:layout_marginLeft="5dp"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      android:textSize="18dp"
    />
        <TextView
            android:id="@+id/topping_text"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:background="@drawable/setbar_bg"
            android:textColor="@color/holo_red_light"
            app:layout_constraintLeft_toRightOf="@id/author_text"
            app:layout_constraintTop_toTopOf="parent"
            android:text="置顶2"
            />
        <TextView
            android:id="@+id/new_text"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:textColor="@color/holo_red_light"
            android:background="@drawable/setbar_bg"
            app:layout_constraintLeft_toRightOf="@id/topping_text"
            app:layout_constraintTop_toTopOf="parent"
            android:text="新"
            />
        <TextView
            android:id="@+id/time_text"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="一天前"
            />
        <TextView
            android:id="@+id/release_text"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:textColor="@color/holo_red_light"
            android:background="@drawable/setbar_bg"
            app:layout_constraintLeft_toRightOf="@id/new_text"
            app:layout_constraintTop_toTopOf="parent"
            android:visibility="gone"
            android:text="本站发布"
            />
        <ImageView
            android:id="@+id/project_imageview"
            android:layout_height="100dp"
            android:layout_width="100dp"
            android:scaleType="centerCrop"
            app:layout_constraintRight_toLeftOf="@id/title_text"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/author_text"
            app:layout_constraintBottom_toTopOf="@+id/Subtitle_text"
            tools:srcCompat="@drawable/default_project_img"
            />


        <TextView
            android:id="@+id/title_text"
            android:layout_gravity="center"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintVertical_weight="1"
            android:paddingLeft="3dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            app:layout_constraintLeft_toRightOf="@+id/project_imageview"
            app:layout_constraintTop_toBottomOf="@+id/author_text"
            app:layout_constraintRight_toRightOf="parent"
            android:maxLines="3"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:text="Deprecated Gradle features were used in this build, making it incompatible with Gradle 8.0."
            />
        <TextView
            android:id="@+id/Subtitle_text"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="10dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/project_imageview"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textSize="13dp"
            android:text="公众号"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>